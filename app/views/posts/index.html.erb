<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>


<table class="centered">
  <% @posts.each do |post| %>
    <tr>
      <td class="left-align">
        <p><strong><%= post.user.full_name %></strong> said: <%= post.content %></p>
      </td>
      <td><%= post.likes.count%></td>
        <td>
        <%= button_to "Like", {action: "create",controller:"likes",params:{post_id: post.id}} %>  
        </td>
      <td>
      <%= link_to "View",post %>
      </td>
    </tr>
  <% end %>
</table>
